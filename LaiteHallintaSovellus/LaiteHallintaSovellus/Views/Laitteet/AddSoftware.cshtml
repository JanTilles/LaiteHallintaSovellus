@model IEnumerable<LaiteHallintaSovellus.Models.Ohjelmat>

@{
    ViewBag.Title = "AddSoftware";
}

<h2>AddSoftware</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ohjelma)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <input type="checkbox" name="nimi" value="@item.Ohjelma_ID" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ohjelma)
        </td>
    </tr>
}

</table>

<div class="form-group">
    <div class="col-md-10">
        <input type="submit" value="Lisää" class="btn btn-default" />
    </div>
</div>
